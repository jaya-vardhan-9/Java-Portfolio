<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="3.0">

  <servlet>
    <servlet-name>JourneyServlet</servlet-name>
    <servlet-class>com.example.web.JourneyServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>JourneyServlet</servlet-name>
    <url-pattern>/journey</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
